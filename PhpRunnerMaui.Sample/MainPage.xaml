<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhpRunnerMaui.Sample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,30"
            Spacing="25">

            <Button
                Text="Add" 
                Clicked="OnAdd"
                HorizontalOptions="Fill" />

            <Button
                Text="List" 
                Clicked="OnList"
                HorizontalOptions="Fill" />

            <Button
                Text="Filter" 
                Clicked="OnFilter"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>

